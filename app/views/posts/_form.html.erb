<!DOCTYPE html>
<div class="container text-center">

  <%= render 'layouts/errors', :object => @post %>

  <%= form_for @post, html: {multipart: true} do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br/>
    <%= f.label :article %>
    <%= f.text_area :article, size: "24x6"%><br/>
    <%= f.submit class: "btn btn-large btn-primary"%>
  <% end %>
</div>
